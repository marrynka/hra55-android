<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What&apos;s the word?"
        android:id="@+id/question"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answer1"
        android:layout_below="@+id/question"
        android:layout_marginTop="58dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center_horizontal"
        android:text="The bird is the word" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answer2"
        android:layout_marginTop="26dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/answer1"
        android:layout_centerHorizontal="true"
        android:text="The bird is the word"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answer3"
        android:layout_marginTop="26dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/answer2"
        android:layout_centerHorizontal="true"
        android:text="The bird is the word"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answer4"
        android:layout_marginTop="26dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/answer3"
        android:layout_centerHorizontal="true"
        android:text="The bird is the word"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answer5"
        android:layout_marginTop="26dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/answer4"
        android:layout_centerHorizontal="true"
        android:text="The bird is the word"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answer6"
        android:layout_marginTop="26dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/answer5"
        android:layout_centerHorizontal="true"
        android:text="The bird is the word"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zaslat"
        android:id="@+id/button"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/answer6"
        android:layout_toRightOf="@+id/question"
        android:layout_toEndOf="@+id/question"
        android:onClick="submit"
        android:nestedScrollingEnabled="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your answer here"
        android:id="@+id/response"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_alignTop="@+id/button"
        android:gravity="center_vertical"
        android:editable="true"
        android:clickable="false"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:selectAllOnFocus="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/timer"
        android:layout_toLeftOf="@+id/question"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>
